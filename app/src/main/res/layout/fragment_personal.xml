<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Personal Data"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="15dp"
            android:hint="Enter your name"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spncountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtname"
            android:layout_marginTop="21dp"
            android:entries="@array/arrcountry" />

        <Spinner
            android:id="@+id/spncity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/spncountry"
            android:layout_marginTop="21dp"
            android:entries="@array/arrcity" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="31dp"
            android:orientation="horizontal"
            android:layout_below="@+id/spncity"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:id="@+id/rdmale"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="0.00"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rdfemale"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Female" />

        </RadioGroup>

        <Spinner
            android:id="@+id/spnmilitry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="14dp"
            android:entries="@array/arrmiltry" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="218dp"
            android:text="Gender"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnnative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnmilitry"
            android:layout_marginTop="16dp"
            android:entries="@array/arrnative" />

        <Spinner
            android:id="@+id/spnspoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnnative"
            android:layout_marginTop="22dp"
            android:entries="@array/arrspoken" />

        <Spinner
            android:id="@+id/spnlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spnspoken"
            android:layout_marginTop="22dp"
            android:entries="@array/arrlocation" />

        <Switch
            android:id="@+id/swderive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Driver Licences"
            android:layout_below="@+id/spnlocation"
            android:layout_alignEnd="@+id/textView3" />

        <Button
            android:id="@+id/btnsavepersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/swderive"
            android:layout_marginTop="70dp"
            android:text="Next" />

        <EditText
            android:id="@+id/txtage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swderive"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:maxLength="2"
            android:hint="Age"
            android:inputType="number" />

    </RelativeLayout>
</ScrollView>

</RelativeLayout>
