<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddJobsFragment">


    <EditText
        android:id="@+id/txtmandetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Details"
        android:inputType="textPersonName"
        android:layout_above="@+id/txtmanbenfits"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/txtmanbenfits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtmanrequir"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Salary in LE"
        android:inputType="number" />

    <Spinner
        android:id="@+id/txtmanrequir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:entries="@array/arrspeclization"
        android:inputType="textPersonName"
        android:layout_above="@+id/txtmansalary"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/txtmansalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:entries="@array/arrspentfic"
        android:hint="Salary"
        android:inputType="number"
        android:layout_above="@+id/txtmanstart"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/txtmanstart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="text|date"
        android:text="         /     /   " />

    <EditText
        android:id="@+id/txtmanend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="End Date"
        android:inputType="text|date"
        android:text="         /     /   " />

    <EditText
        android:id="@+id/txtmanfrom"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnmansave"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Experience years"
        android:inputType="text" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/back"
        android:layout_alignTop="@+id/txtmanfrom"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnmansave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Job"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ending apply date"
        android:textSize="18sp"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/txtmanfrom"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="starting apply date"
        android:textSize="18sp"
        android:layout_above="@+id/txtmanend"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/txtmatitile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/jobtitles"
        android:layout_above="@+id/txtmandetails"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add job ADS"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
